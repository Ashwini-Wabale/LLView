# System name
export LLVIEW_SYSTEMNAME="system"

# Folder locations
export LLVIEW_HOME="$HOME/../shared/test/llview"
export LLVIEW_DATA="$HOME/.data"
export LLVIEW_CONF="$LLVIEW_DATA/configs"
# Shared folder between Remote and Server (same as $LLVIEW_SHARED in .llview_server_rc)
export LLVIEW_SHARED="/p/hpcmon/JURECA/llstat/$LLVIEW_SYSTEMNAME"

# Shutdown signal file
export LLVIEW_SHUTDOWN="$HOME/HALT_ALL"

# How many days logs should be kept (apart from current day)
export LLVIEW_LOG_DAYS=2

# PERL5 definitions
# module load Perl
# module load Perl-bundle-CPAN
export PATH="/p/home/syslocal/llstat/jureca/perl5/bin${PATH:+:${PATH}}"
export PERL5LIB="/p/home/syslocal/llstat/jureca/perl5/lib/perl5${PERL5LIB:+:${PERL5LIB}}"
export PERL_LOCAL_LIB_ROOT="/p/home/syslocal/llstat/jureca/perl5${PERL_LOCAL_LIB_ROOT:+:${PERL_LOCAL_LIB_ROOT}}"
export PERL_MB_OPT="--install_base \"/p/home/syslocal/llstat/jureca/perl5\""
export PERL_MM_OPT="INSTALL_BASE=/p/home/syslocal/llstat/jureca/perl5"
export LD_LIBRARY_PATH="/p/software/jurecadc/stages/2023/software/Perl/5.34.1-GCCcore-11.3.0/lib:$LD_LIBRARY_PATH"
export LIBRARY_PATH="/p/software/jurecadc/stages/2023/software/Perl/5.34.1-GCCcore-11.3.0/lib:$LIBRARY_PATH"
export PATH="/p/software/jurecadc/stages/2023/software/Perl/5.34.1-GCCcore-11.3.0/bin:$PATH"

# Python definitions
# module load Python
# module load PyYAML
export LD_LIBRARY_PATH="/p/software/jurecadc/stages/2023/software/Python/3.10.4-GCCcore-11.3.0/lib:$LD_LIBRARY_PATH"
export LIBRARY_PATH="/p/software/jurecadc/stages/2023/software/Python/3.10.4-GCCcore-11.3.0/lib:$LIBRARY_PATH"
export PATH="/p/software/jurecadc/stages/2023/software/Python/3.10.4-GCCcore-11.3.0/bin:$PATH"
export PYTHONPATH="/p/software/jurecadc/stages/2023/software/Python/3.10.4-GCCcore-11.3.0/easybuild/python:$PYTHONPATH"

